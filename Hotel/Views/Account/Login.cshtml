@model LoginVM

<main>
    <div class="signIn">
        <div class="row w-100 mx-0">
            <div class="col-lg-4 mx-auto">
                <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                    <div class="card">
                        <h4>Hello! let's get started</h4>
                        <h6 class="font-weight-light">Sign in</h6>
                        <div asp-validation-summary="ModelOnly"></div>
                        <form method="post" enctype="multipart/form-data" class="pt-3">
                            <div class="form-group">
                                <label asp-for="@Model.Email">Email</label>
                                <input asp-for="@Model.Email" class="form-control" placeholder="Email">
                                <span class="text-danger" asp-validation-for="@Model.Email"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Password">Password</label>
                                <input asp-for="@Model.Password" class="form-control" placeholder="Password">
                                <span class="text-danger" asp-validation-for="@Model.Password"></span>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input">
                                        Keep me signed in
                                    </label>
                                </div>
                                <a href="#" class="auth-link text-black">Forgot password?</a>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Don't have an account? <a asp-controller="account" asp-action="register" class="text-primary">Create</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
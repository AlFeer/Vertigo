@model RegisterVM

<main>
    <div class="signUp">
        <div class="row w-100 mx-0">
            <div class="col-lg-4 mx-auto">
                <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                    <div class="card">
                        <h4>New here?</h4>
                        <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                        <div asp-validation-summary="ModelOnly"></div>
                        <form method="post" enctype="multipart/form-data" class="pt-4">
                            <div class="form-group">
                                <label asp-for="@Model.Username">Username</label>
                                <input asp-for="@Model.Username" class="form-control" placeholder="Username">
                                <span class="text-danger" asp-validation-for="@Model.Username"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Fullname">Fullname</label>
                                <input asp-for="@Model.Fullname" class="form-control" placeholder="Fullname">
                                <span class="text-danger" asp-validation-for="@Model.Fullname"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Email">Email</label>
                                <input asp-for="@Model.Email" class="form-control" placeholder="Email">
                                <span class="text-danger" asp-validation-for="@Model.Email"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Password">Password</label>
                                <input asp-for="@Model.Password" class="form-control" placeholder="Password">
                                <span class="text-danger" asp-validation-for="@Model.Email"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                                <input asp-for="@Model.ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
                                <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                            </div>
                            <div class="mt-3 mr-4">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Already have an account? <a asp-controller="account" asp-action="login" class="text-primary">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
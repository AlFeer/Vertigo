@model Hotels

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Blog - Details</h4>
			<a asp-controller="hotels" asp-action="index" class="btn btn-primary">Go Back</a>
			<a asp-controller="hotels" asp-action="create" class="btn btn-success">Create</a>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>
								Image
							</th>
							<th>
								Name
							</th>
							<th>
								Place
							</th>
							<th>
								Stars
							</th>
							<th>
								Price
							</th>
							<th>
								Settings
							</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td class="py-1">
								<img src="/assets/uploads/images/@Model.ImageUrl" alt="image" />
							</td>
							<td>
								@Model.Name
							</td>
							<td>
								@Model.Place
							</td>
							<td>
								@Model.Stars
							</td>
							<td>
								@Model.Price
							</td>
							<td>
								<a asp-controller="hotels" asp-action="update" asp-route-id="@Model.Id" class="btn btn-warning">Update</a>
								<a asp-controller="hotels" asp-action="delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>